<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCF8"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/tmoney_bold"
        android:text="추가 정보 입력"
        android:textColor="#757863"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:fontFamily="@font/tmoney_bold"
                    android:text="닉네임:"
                    android:textColor="#757863"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/nickNameInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/tmoney_regular"
                    android:gravity="center"
                    android:hint="닉네임을 입력하세요."
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:textColor="#757863"
                    android:textSize="16sp" />

            </LinearLayout>

            <Button
                android:id="@+id/nickNameChk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="#E3F2C1"
                android:fontFamily="@font/tmoney_bold"
                android:text="닉네임 중복 검사"
                android:textColor="#757863" />

            <TextView
                android:id="@+id/timeSetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tmoney_bold"
                android:paddingTop="30dp"
                android:text="시간 설정"
                android:textColor="#757863"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tmoney_regular"
                android:text="시간에 맞춰 알람을 울려드려요!"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/wakeTimeFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/wakeTimeLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/wakeTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="일어나는 시간: "
                            android:textAlignment="viewEnd"
                            android:textColor="#757863"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/wakeTimeH"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="06"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/tmoney_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=":" />

                        <EditText
                            android:id="@+id/wakeTimeM"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="50"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/breakfastTimeFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/breakfastTimeLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/breakfastTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="아침 식사 시간: "
                            android:textAlignment="viewEnd"
                            android:textColor="#757863"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/breakfastTimeH"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="07"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/tmoney_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=":" />

                        <EditText
                            android:id="@+id/breakfastTimeM"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="20"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/lunchTimeFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lunchTimeLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/lunchTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="점심 식사 시간: "
                            android:textAlignment="viewEnd"
                            android:textColor="#757863"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/lunchTimeH"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="11"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/tmoney_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=":" />

                        <EditText
                            android:id="@+id/lunchTimeM"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="10"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/dinnerTimeFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/dinnerTimeLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/dinnerTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="저녁 식사 시간: "
                            android:textAlignment="viewEnd"
                            android:textColor="#757863"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/dinnerTimeH"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="19"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/tmoney_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=":" />

                        <EditText
                            android:id="@+id/dinnerTimeM"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="20"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/bedTimeFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/bedTimeLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/bedTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="잠자는 시간: "
                            android:textAlignment="viewEnd"
                            android:textColor="#757863"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/bedTimeH"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="01"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/tmoney_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=":" />

                        <EditText
                            android:id="@+id/bedTimeM"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="00"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/eatingFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/eatingTimeLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/eatingTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="식사 시간: "
                            android:textAlignment="viewEnd"
                            android:textColor="#757863"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/eatingTimeH"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="00"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/tmoney_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text=":" />

                        <EditText
                            android:id="@+id/eatingTimeM"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="2"
                            android:fontFamily="@font/tmoney_regular"
                            android:gravity="center"
                            android:hint="20"
                            android:includeFontPadding="false"
                            android:inputType="number|numberDecimal"
                            android:textColor="#757863"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/tmoney_regular"
                        android:text="* 식사 시간은 평균적으로 식사하는 시간을 의미 합니다" />
                </LinearLayout>

            </FrameLayout>

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="#E3F2C1"
                android:fontFamily="@font/tmoney_bold"
                android:text="회원 가입"
                android:textColor="#757863" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>