<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceRegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/permLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/permText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/tmoney_bold"
                    android:includeFontPadding="false"
                    android:text="앱 권한을 허용해 주세요."
                    android:textColor="#757863"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/permBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF9B9B"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="권한 허용"
                    android:textColor="#757863" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_bluetooth_disabled_24" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btOnOffBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E3F2C1"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="블루투스 켜기"
                    android:textColor="#757863" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btConnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btConnImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_circle_24"
                        android:tint="#80BA69" />

                    <TextView
                        android:id="@+id/btConnState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tmoney_regular"
                        android:includeFontPadding="false"
                        android:text="약통이 등록 되었습니다"
                        android:textAlignment="viewStart"
                        android:textColor="#757863"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btConnName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/tmoney_bold"
                        android:includeFontPadding="false"
                        android:text="Device Name"
                        android:textColor="#757863"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btConnOffBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#E3F2C1"
                        android:fontFamily="@font/tmoney_regular"
                        android:includeFontPadding="false"
                        android:text="약통 삭제"
                        android:textColor="#757863" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btUiLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btNotFindText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="약통이 등록되지 않았습니다"
                    android:textAlignment="center"
                    android:textColor="#757863"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/btDeviceUiLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/btCell1"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="2.5dp"
                                    android:background="@drawable/device_ui_circle_top"
                                    android:backgroundTint="#DDE6ED"
                                    android:padding="20dp"
                                    android:src="@drawable/baseline_check_box_outline_blank_24" />

                                <ImageView
                                    android:id="@+id/btCell2"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="2.5dp"
                                    android:background="@drawable/device_ui_rectangle"
                                    android:backgroundTint="#DDE6ED"
                                    android:padding="20dp"
                                    android:src="@drawable/baseline_check_box_outline_blank_24" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/btCell3"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="2.5dp"
                                    android:background="@drawable/device_ui_circle_bottom"
                                    android:backgroundTint="#DDE6ED"
                                    android:padding="20dp"
                                    android:src="@drawable/baseline_check_box_outline_blank_24" />

                                <ImageView
                                    android:id="@+id/btCell4"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="2.5dp"
                                    android:background="@drawable/device_ui_rectangle"
                                    android:backgroundTint="#DDE6ED"
                                    android:padding="20dp"
                                    android:src="@drawable/baseline_check_box_outline_blank_24" />

                            </TableRow>

                        </TableLayout>

                        <ImageView
                            android:id="@+id/btCell5"
                            android:layout_width="140dp"
                            android:layout_height="145dp"
                            android:layout_marginStart="2.5dp"
                            android:background="@drawable/device_ui_circle_right"
                            android:backgroundTint="#DDE6ED"
                            android:padding="46dp"
                            android:src="@drawable/baseline_check_box_outline_blank_24" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btCellInfoNotText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/tmoney_bold"
                        android:text="약을 클릭해서 약 정보를 확인하세요"
                        android:textColor="#757863"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/btCellInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/btCellInfoImage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/baseline_access_time_24" />

                        <TextView
                            android:id="@+id/btCellInfoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tmoney_bold"
                            android:text="Medicine Name"
                            android:textColor="#757863"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btDeviceEditBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E3F2C1"
                        android:fontFamily="@font/tmoney_regular"
                        android:includeFontPadding="false"
                        android:text="약통 편집하기"
                        android:textColor="#757863" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btFindLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btFindBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3F2C1"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="근처 약통 찾기"
                    android:textColor="#757863" />

                <ProgressBar
                    android:id="@+id/btFindProgressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btListCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:cardBackgroundColor="#DDE6ED"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/btListNotFoundText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tmoney_regular"
                        android:includeFontPadding="false"
                        android:text="근처의 약통을 찾지 못했습니다"
                        android:textAlignment="center"
                        android:textColor="#757863"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/btListLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>