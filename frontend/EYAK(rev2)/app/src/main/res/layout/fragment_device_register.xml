<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a103.dev.eyakrev1.DeviceRegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/baseline_bluetooth_disabled_24" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btOnOffBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E3F2C1"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="블루투스 켜기"
                    android:textColor="#757863" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btConnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btConnImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_circle_24"
                        android:tint="@color/material_dynamic_neutral50" />

                    <TextView
                        android:id="@+id/textView57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/tmoney_bold"
                        android:includeFontPadding="false"
                        android:text="Device Name"
                        android:textColor="#757863"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btConnOffBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#E3F2C1"
                        android:fontFamily="@font/tmoney_regular"
                        android:includeFontPadding="false"
                        android:text="약통 삭제"
                        android:textColor="#757863" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btUiLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btNotFindText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="약통이 등록되지 않았습니다"
                    android:textAlignment="center"
                    android:textColor="#757863"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btFindLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btFindBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3F2C1"
                    android:fontFamily="@font/tmoney_regular"
                    android:includeFontPadding="false"
                    android:text="근처 약통 찾기"
                    android:textColor="#757863" />

                <ProgressBar
                    android:id="@+id/btFindProgressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btListCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#DDE6ED"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:id="@+id/btListLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btListNotFoundText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tmoney_regular"
                            android:includeFontPadding="false"
                            android:text="근처의 약통을 찾지 못했습니다"
                            android:textAlignment="center"
                            android:textColor="#757863"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>