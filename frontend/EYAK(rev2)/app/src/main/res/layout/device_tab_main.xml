<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/backDeviceEditBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로" />

            <HorizontalScrollView
                android:id="@+id/deviceScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/btEditCell1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/baseline_check_box_outline_blank_24"
                                android:backgroundTint="#AAABAE"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/btEditCell1Text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="text" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btEditCell2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/baseline_check_box_outline_blank_24"
                                android:backgroundTint="#AAABAE"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/btEditCell2Text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="text" />
                            </LinearLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/btEditCell3"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/baseline_check_box_outline_blank_24"
                                android:backgroundTint="#AAABAE"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/btEditCell3Text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="TextView" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btEditCell4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/baseline_check_box_outline_blank_24"
                                android:backgroundTint="#AAABAE"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/btEditCell4Text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="TextView" />
                            </LinearLayout>
                        </TableRow>

                    </TableLayout>

                    <LinearLayout
                        android:id="@+id/btEditCell5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/baseline_check_box_outline_blank_24"
                        android:backgroundTint="#AAABAE"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btEditCell5Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="TextView" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/medicineScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/testEditImage1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="30dp"
                        app:srcCompat="@drawable/baseline_access_time_24" />

                    <ImageView
                        android:id="@+id/testEditImage2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/baseline_access_time_24" />
                </LinearLayout>
            </HorizontalScrollView>

            <Switch
                android:id="@+id/deviceSoundSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/tmoney_bold"
                android:text="알림 소리"
                android:textColor="#757863"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/deviceBuzzSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/tmoney_bold"
                android:text="알림 진동"
                android:textColor="#757863"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>